# Reference: <https://postmarketos.org/devicepkg>
pkgname=device-xiaomi-elish
pkgdesc="Xiaomi Mi Pad 5 Pro"
pkgver=0.2
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	mesa-dri-gallium
	mkbootimg
	postmarketos-base
"
makedepends="devicepkg-dev"
source="deviceinfo"

subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
	linux-postmarketos-qcom-sm8250:kernel_mainline
	linux-postmarketos-qcom-sm8250-lineage:kernel_downstream_lineage
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname
}

linux-postmarketos-qcom-sm8250() {
	pkgdesc="mainline kernel"
	depends="linux-postmarketos-qcom-sm8250"
	devicepkg_subpackage_kernel $startdir $pkgname $subpkgname
}

linux-postmarketos-qcom-sm8250-lineage() {
	pkgdesc="kernel from lineage os"
	depends="linux-postmarketos-qcom-sm8250-lineage"
	devicepkg_subpackage_kernel $startdir $pkgname $subpkgname
}

nonfree_firmware() {
	pkgdesc="Firmware for GPU, WiFi, etc."
	depends="
		firmware-xiaomi-elish-adreno
		"
	mkdir "$subpkgdir"
}

sha512sums="
